<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xwbing.domain.mapper.sys.SysUserMapper">
    <resultMap id="BaseResultMap" type="sysUser">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="modified_time" property="modifiedTime"/>
        <result column="user_name" property="userName"/>
        <result column="is_admin" property="isAdmin"/>
    </resultMap>
    <sql id="Table">
        sys_user_info
    </sql>
    <sql id="Base_Column_List">
        id,
        creator,
        modifier,
        date_format(create_time,'%Y-%m-%d %H:%i:%s') created,
        date_format(modified_time,'%Y-%m-%d %H:%i:%s') modified,
        user_name,
        name,
        sex,
        mail,
        salt,
        password,
        is_admin
    </sql>
    <sql id="condition">
        <where>
            <if test="name!=null">
                name like CONCAT(#{name},'%')
            </if>
            <if test="sex!=null">
                and sex=#{sex}
            </if>
        </where>
    </sql>
    <!-- 插入 -->
    <insert id="insert">
        <selectKey keyProperty="id" resultType="string" order="BEFORE">
            SELECT REPLACE(UUID(), '-', '')
        </selectKey>
        INSERT INTO
        <include refid="Table"/>(
        id,
        creator,
        create_time,
        user_name,
        name,
        sex,
        mail,
        salt,
        password,
        is_admin
        )
        VALUES(
        #{id},
        #{creator},
        now(),
        #{userName},
        #{name},
        #{sex},
        #{mail},
        #{salt},
        #{password},
        #{isAdmin}
        )
    </insert>
    <!-- 批量插入 -->
    <insert id="insertBatch">
        INSERT INTO
        <include refid="Table"/>(
        id,
        creator,
        create_time,
        user_name,
        name,
        sex,
        mail,
        salt,
        password,
        is_admin
        )
        VALUES
        <foreach collection="list" item="obj" separator=",">(
            (SELECT REPLACE(UUID(), '-', '') AS id),
            #{obj.creator},
            now(),
            #{obj.userName},
            #{obj.name},
            #{obj.sex},
            #{obj.mail},
            #{obj.salt},
            #{obj.password},
            #{obj.isAdmin}
            )
        </foreach>
    </insert>
    <!-- 删除 -->
    <delete id="deleteById">
        DELETE FROM
        <include refid="Table"/>
        WHERE id=#{id}
    </delete>
    <!-- 批量删除 -->
    <delete id="deleteByIds">
        DELETE FROM
        <include refid="Table"/>
        WHERE id IN
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
    <!-- 条件删除 -->
    <delete id="delete">
        DELETE FROM
        <include refid="Table"/>
        <include refid="condition"/>
    </delete>
    <!-- 更新 -->
    <update id="update">
        UPDATE
        <include refid="Table"/>
        <set>
            modified_time=now(),
            <if test="modifier!=null">modifier=#{modifier},</if>
            <if test="name!=null">name=#{name},</if>
            <if test="sex!=null">sex=#{sex},</if>
            <if test="mail!=null">mail=#{mail},</if>
            <if test="salt!=null">salt=#{salt},</if>
            <if test="password!=null">password=#{password},</if>
            <if test="isAdmin!=null">is_admin=#{isAdmin},</if>
        </set>
        WHERE id=#{id}
    </update>
    <!-- 批量更新 -->
    <update id="updateBatch">
        UPDATE
        <include refid="Table"/>
        <trim prefix="set" suffixOverrides=",">
            <trim prefix="modified_time=case" suffix="end,">
                <foreach collection="list" item="obj">
                    when id=#{obj.id} then now()
                </foreach>
            </trim>
            <trim prefix="modifier=case" suffix="end,">
                <foreach collection="list" item="obj">
                    <if test="obj.modifier!=null">
                        when id=#{obj.id} then #{obj.modifier}
                    </if>
                </foreach>
            </trim>
            <trim prefix="name=case" suffix="end,">
                <foreach collection="list" item="obj">
                    <if test="obj.name!=null">
                        when id=#{obj.id} then #{obj.name}
                    </if>
                </foreach>
            </trim>
            <trim prefix="sex=case" suffix="end,">
                <foreach collection="list" item="obj">
                    <if test="obj.sex!=null">
                        when id=#{obj.id} then #{obj.sex}
                    </if>
                </foreach>
            </trim>
            <trim prefix="mail=case" suffix="end,">
                <foreach collection="list" item="obj">
                    <if test="obj.mail!=null">
                        when id=#{obj.id} then #{obj.mail}
                    </if>
                </foreach>
            </trim>
            <trim prefix="salt=case" suffix="end,">
                <foreach collection="list" item="obj">
                    <if test="obj.salt!=null">
                        when id=#{obj.id} then #{obj.salt}
                    </if>
                </foreach>
            </trim>
            <trim prefix="password=case" suffix="end,">
                <foreach collection="list" item="obj">
                    <if test="obj.password!=null">
                        when id=#{obj.id} then #{obj.password}
                    </if>
                </foreach>
            </trim>
            <trim prefix="is_admin=case" suffix="end,">
                <foreach collection="list" item="obj">
                    <if test="obj.isAdmin!=null">
                        when id=#{obj.id} then #{obj.isAdmin}
                    </if>
                </foreach>
            </trim>
        </trim>
        <where>
            <foreach collection="list" separator="or" item="obj">
                id=#{obj.id}
            </foreach>
        </where>
    </update>
    <!-- 查找 -->
    <select id="findById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="Table"/>
        WHERE id=#{id}
    </select>
    <!-- 根据ids查找 -->
    <select id="findByIds" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="Table"/>
        WHERE id IN
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>
    <!-- 条件查询 -->
    <select id="find" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="Table"/>
        <include refid="condition"/>
    </select>
    <!-- 查询所有 -->
    <select id="findAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="Table"/>
        ORDER BY create_time DESC
    </select>
    <select id="findByUserName" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="Table"/>
        where user_name=#{userName}
    </select>
</mapper>