<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xwbing.domain.mapper.rest.FilesUploadMapper">
    <resultMap id="BaseResultMap" type="filesUpload">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="modified_time" property="modifiedTime"/>
    </resultMap>
    <sql id="Table">
        file_upload
    </sql>
    <sql id="Base_Column_List">
        id,
        creator,
        modifier,
        create_time,
        modified_time,
        name,
        type,
        data
    </sql>
    <!-- 插入 -->
    <insert id="insert">
        <selectKey keyProperty="id" resultType="string" order="BEFORE">
            SELECT REPLACE(UUID(), '-', '')
        </selectKey>
        INSERT INTO
        <include refid="Table"/>(
        id,
        creator,
        create_time,
        name,
        type,
        data
        )
        VALUES(
        #{id},
        #{creator},
        now(),
        #{name},
        #{type},
        #{data}
        )
    </insert>
    <!-- 批量插入 -->
    <insert id="insertBatch">
        INSERT INTO
        <include refid="Table"/>(
        id,
        creator,
        create_time,
        name,
        type,
        data
        )
        VALUES
        <foreach collection="list" item="obj" separator=",">(
            (SELECT REPLACE(UUID(), '-', '') AS id),
            #{obj.creator},
            now(),
            #{obj.name},
            #{obj.type},
            #{obj.data}
            )
        </foreach>
    </insert>
    <select id="findByName" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="Table"/>
        where name=#{name}
        <if test="type!=null">
            and type=#{type}
        </if>
        ORDER BY create_time DESC
    </select>
</mapper>